@import 'nib'

@import 'mixins'

arrange-header-height = 27px
initial-sidebar-width = 250px
initial-plugin-width = 200px

.arrange
  position absolute
  overflow auto
  top 60px
  bottom 0px
  width 100%

.arrange-controls
  float left
  height arrange-header-height
  width initial-sidebar-width
  position relative
  z-index 100

  .buttons
    display inline
    absolute top 3px left 10px

  .title
    top 5px
    display inline
    text-align center
    center 100px
    no-select()

  .dropdown
    display inline
    absolute top 3px right 10px

.arrange-pluginheader
  float left
  height arrange-header-height
  width initial-plugin-width
  position relative
  z-index 99

  .title
    top 5px
    display inline
    text-align center
    center 100px
    no-select()


.arrange-timeline
  width 2000px
  z-index 98
  height arrange-header-height
  position relative

.arrange-tracklist
  float left
  width initial-sidebar-width
  z-index 97

  .arrange-track
    position relative
    height 75px
      
    .btn
      padding 2px 6px 4px

    .track-color-bar
      absolute top left
      height 100%
      width 10px

    .track-title
      width 100px

    .track-controls
      absolute left 15px top 10px right 30px

    .audio-controls
      absolute right 10px top 10px

    .lock-button
      absolute right 24px top 46px

.arrange-pluginlist
  float left
  height 896px
  width initial-plugin-width
  z-index 96

.arrange-trackbody
  overflow-x auto
  overflow-y hidden
  float left
  width 60%
  z-index 95

  .track-content
    height 75px
    width 1500px

    img
      height 100%
      width 100%