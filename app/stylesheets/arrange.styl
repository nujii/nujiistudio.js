@import 'nib'

@import 'mixins'

arrange-header-height = 27px
initial-sidebar-width = 250px
initial-plugin-width = 200px

.arrange
  position relative
  overflow auto
  height 100%

.arrange-controls
  height arrange-header-height
  width initial-sidebar-width
  position fixed
  z-index 100

  .buttons
    display inline
    absolute top 3px left 10px

  .title
    display inline
    text-align center
    center 100px
    no-select()

  .dropdown
    display inline
    absolute top 3px right 10px

.arrange-pluginheader
  height arrange-header-height
  width initial-plugin-width
  fixed left initial-sidebar-width
  z-index 99

  .title
    display inline
    text-align center
    center 100px
    no-select()

.arrange-tracklist
  relative top arrange-header-height
  width initial-sidebar-width
  z-index 98

  .arrange-track
    position relative
    height 75px

    .track-color-bar
      absolute top left
      height 100%
      width 10px


    .track-title
      width 30%

    .track-controls
      width 100%
      absolute left 15px top 10px right 30px

    .audio-controls
      absolute right 10px top 10px

    .lock-button
      absolute right 28px top 42px

.arrange-pluginlist
  height 100%
  width initial-plugin-width
  absolute left initial-sidebar-width top arrange-header-height
  z-index 97

.arrange-trackbody
  height 100%
  width 100%